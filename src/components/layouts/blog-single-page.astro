---
import { Image, Picture } from '@astrojs/image/components'
import BlogWrapper from './blog-wrapper.astro';
interface IProps {
}
const { frontmatter } = Astro.props;
---

<main class="mb-auto">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 xl:max-w-5xl xl:px-0">
        <article>
            <div class="xl:divide-y xl:divide-gray-200 xl:dark:divide-gray-700">
                <header class="pt-6 xl:pb-6">
                    <div class="space-y-1 text-center">
                        <dl class="space-y-1 text-center">
                            <div>
                                <dt class="sr-only">Diterbitkan pada</dt>
                                <dd class="text-base font-medium leading-6 text-gray-500 dark:text-gray-400">
                                    <time datetime="2021-01-12T00:00:00.000Z">Tuesday, January 12, 2021</time>
                                </dd>
                            </div>
                        </dl>
                        <div>
                            <h1 class="text-3xl font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-5xl md:leading-14">{frontmatter.title}</h1>
                        </div>
                    </div>
                </header>
                <Image src={frontmatter.image.url} alt={frontmatter.image.alt} height={200} aspectRatio={16/9} />
                <div class="prose lg:prosexl dark:prose-dark">
                <slot />
                </div>
            </div>
        </article>
    </div>
</main>